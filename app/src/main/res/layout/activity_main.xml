<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layout_main_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username" />

        <EditText
            android:id="@+id/et_main_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_main_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password" />

        <EditText
            android:id="@+id/et_main_password"
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            android:hint="password"
            android:inputType="textPassword"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_main_checkpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password" />

        <EditText
            android:id="@+id/et_main_checkpassword"
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            android:hint="password again"
            android:inputType="textPassword"/>
    </LinearLayout>

        <LinearLayout

            android:id="@+id/layout_main_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/layout_main_password">

            <Button
                android:id="@+id/btn_main_register"
                android:layout_width="162dp"
                android:layout_height="wrap_content"
                android:text="register" />

            <Button
                android:id="@+id/btn_main_reset"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="Reset" />
        </LinearLayout>
</LinearLayout>